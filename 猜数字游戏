#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include<stdlib.h>
#include<time.h>
void menu()
{
	printf("**************请选择*************\n");
	printf("********1.开始      0.结束*******\n");
	printf("*********************************\n");
}
void game()
{
	int a = 0;
	int guess;
	a = rand()%100+1;
	while (1)
	{
		printf("输入你猜的数:");
		scanf("%d", &guess);
		if (guess > a)
			printf("猜大了\n");
		else if (guess < a)
			printf("猜小了\n");
		else
		{
			printf("猜对了，你真厉害ヾ(๑╹◡╹)ﾉ”\n");
			break;
		}
	}
}
int main()
{
	int b = 0;
	srand((unsigned int)time(NULL));
	do
	{
		menu();
		printf("请选择:");
		scanf("%d", &b);
		switch (b)
		{
		case 1:
			printf("游戏开始\n");
			game();
			break;
		case  0:
			printf("游戏结束\n");
			break;
		default:
			printf("选择错误\n");
			break;
		}
	} while (b);
		return 0;
}
